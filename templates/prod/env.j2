# Production Environment Configuration
APP_ENV=production
APP_DEBUG=false
APP_URL=https://{{ app_name }}.example.com

# Database Configuration
DB_HOST=db.production.example.com
DB_PORT=5432
DB_NAME={{ app_name }}_prod
DB_USER={{ app_name }}_prod
DB_PASSWORD={{ db_password | default('changeme') }}

# Redis Configuration
REDIS_HOST=redis.production.example.com
REDIS_PORT=6379

# Application Settings
APP_VERSION={{ app_version }}
APP_COMMIT={{ commit }}
APP_BRANCH={{ branch }}
DEPLOYED_BY={{ triggered_by }}
DEPLOYED_AT={{ ansible_date_time.iso8601 }} 