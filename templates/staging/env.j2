# Staging Environment Configuration
APP_ENV=staging
APP_DEBUG=true
APP_URL=https://staging.{{ app_name }}.example.com

# Database Configuration
DB_HOST=db.staging.example.com
DB_PORT=5432
DB_NAME={{ app_name }}_staging
DB_USER={{ app_name }}_staging
DB_PASSWORD={{ db_password | default('changeme') }}

# Redis Configuration
REDIS_HOST=redis.staging.example.com
REDIS_PORT=6379

# Application Settings
APP_VERSION={{ app_version }}
APP_COMMIT={{ commit }}
APP_BRANCH={{ branch }}
DEPLOYED_BY={{ triggered_by }}
DEPLOYED_AT={{ ansible_date_time.iso8601 }} 